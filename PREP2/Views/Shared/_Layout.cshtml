<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
         @Styles.Render("~/Content/font-awesome")
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/fullcalendarcss")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="container">
        <div class="masthead">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">PREP Web</a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="~/Home/Index"><span class="fa fa-home fa-fw"></span>Home</a></li>
                            <li><a href="~/Calendar/Index"><i class="fa fa-bars"></i>&nbsp;Event Calendar </a></li>
                            <li><a href="~/Home/Contact"><i class="fa fa-phone"></i>&nbsp;Contact</a></li>
              
                        </ul>
           
                    </div><!--/.nav-collapse -->
                </div><!--/.container-fluid -->
            </nav>
        </div>
        <!-- Jumbotron -->
        <div class="jumbotron">
       
            <h1>
                PREP Web
            </h1>
            <p class="lead">
                Providing Scheduling, Daily Activity, Auditing & Administrative tools for SAPD Traffic
                Grants.</p>
            <p>
                <a class="btn btn-lg btn-success" href="#" role="button">Get started</a></p>
        </div>
        <div class="container">
            <div class="row">
                <div id="body">
                    <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
                </div>
                @*<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">*@ @*@RenderBody()
                <hr />*@ @* </div>*@
            </div>
        </div>
        <!-- Site footer -->
        <footer class="footer">
        <p class="text-center">&copy; @DateTime.Now.Year - Activity App - Created by: D.Davidson#1341</p>
      </footer>
    </div>

        @Scripts.Render("~/bundles/jquery")
        <script src="../../Scripts/moment.min.js" type="text/javascript"></script>
        @*@Scripts.Render("~/bundles/moment")*@
        <script src="../../Scripts/fullcalendar.min.js" type="text/javascript"></script>

       @* @Scripts.Render("~/bundles/fullcalendarjs")*@

        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
